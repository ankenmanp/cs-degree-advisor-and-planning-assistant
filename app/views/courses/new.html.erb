<h1>Add a Course</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@course) do |f| %>
      <%= render 'shared/error_messages', object: @course %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :subject %> <h0> (abbreviation) </h0>
      <%= f.text_field :subject, class: 'form-control' %>

      <%= f.label :call_number %>
      <%= f.number_field :call_number, class: 'form-control' %>

      <%= f.label :credit_hours %>
      <%= f.number_field :credit_hours, class: 'form-control' %>

      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control' %>


      <%= f.submit "Create Course", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
